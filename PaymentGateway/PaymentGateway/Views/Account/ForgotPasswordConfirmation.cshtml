@{
    ViewData["Title"] = "Email Sent";
}

<section class="auth-shell">
    <aside class="auth-panel">
        <h2>Check Your Inbox</h2>
        <p>If the email exists in our system, a secure reset link has been sent.</p>
    </aside>

    <section class="info-card">
        <h2>Email Sent</h2>
        <p>The reset URL can be used only one time and expires automatically for security.</p>
        <a class="btn btn-primary" asp-action="Login" asp-controller="Account">Back to Login</a>
    </section>
</section>
