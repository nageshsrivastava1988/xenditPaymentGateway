@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="auth-shell">
    <aside class="auth-panel">
        <h2>Reset Access</h2>
        <p>Enter the registered email address. The system sends a one-time secure reset URL.</p>
        <div class="auth-metrics">
            <div class="metric"><strong>Single Use</strong><span>Token expires on use</span></div>
            <div class="metric"><strong>Timed</strong><span>Auto expiry enabled</span></div>
            <div class="metric"><strong>Verified</strong><span>Email must exist</span></div>
        </div>
    </aside>

    <section class="auth-card">
        <h1>Reset Password</h1>
        <p class="muted">Provide your registered email id.</p>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Registered Email Id</label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
        </form>

        <div class="auth-links">
            <a asp-action="Login" asp-controller="Account">Back to login</a>
        </div>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
