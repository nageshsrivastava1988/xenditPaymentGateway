@{
    ViewData["Title"] = "Invalid Reset Link";
}

<section class="auth-shell">
    <aside class="auth-panel">
        <h2>Link Expired</h2>
        <p>This reset URL is invalid, expired, or already used.</p>
    </aside>

    <section class="info-card">
        <h2>Reset Link Not Valid</h2>
        <p>Request a new password reset link to continue.</p>
        <a class="btn btn-primary" asp-action="ForgotPassword" asp-controller="Account">Request New Link</a>
    </section>
</section>
