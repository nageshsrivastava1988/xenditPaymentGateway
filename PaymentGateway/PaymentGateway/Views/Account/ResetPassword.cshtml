@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Set New Password";
}

<section class="auth-shell">
    <aside class="auth-panel">
        <h2>Create New Password</h2>
        <p>Set a strong credential for your admin account. This reset link is valid only once.</p>
    </aside>

    <section class="auth-card">
        <h1>Set New Password</h1>
        <p class="muted">Use at least 8 characters and keep it unique.</p>

        <form asp-action="ResetPassword" asp-controller="Account" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input asp-for="TokenId" type="hidden" />
            <input asp-for="Token" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Password</button>
        </form>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
