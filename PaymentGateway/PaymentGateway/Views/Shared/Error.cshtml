@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="admin-page">
    <section class="admin-card narrow">
        <h2 style="margin-top:0;">Something Went Wrong</h2>
        <p class="page-subtitle">An unexpected error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        <p class="mb-0">If this issue continues, share the request id with the support team for investigation.</p>
    </section>
</section>
